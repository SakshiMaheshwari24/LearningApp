<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LetsLearn">


        <TextView
            android:id="@+id/textView"
            android:layout_width="327dp"
            android:layout_height="34dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:text="Hello Lets Start Learn"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.123" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingTop="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">


                <ImageButton
                    android:id="@+id/alphabetLearn"
                    android:layout_width="184dp"
                    android:layout_height="183dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="0.184"
                    app:srcCompat="@drawable/alphabetbutton" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/numbersLearn"
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/alphabetLearn"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="0.183"
                    app:srcCompat="@drawable/numbers" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/coloursLearn"
                    android:layout_width="184dp"
                    android:layout_height="184dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.078"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/alphabetLearn"
                    app:layout_constraintVertical_bias="0.141"
                    app:srcCompat="@drawable/colours" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp">

                <ImageButton
                    android:id="@+id/shapeButton"
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.662"
                    app:layout_constraintStart_toEndOf="@+id/coloursLearn"
                    app:layout_constraintTop_toBottomOf="@+id/numbersLearn"
                    app:layout_constraintVertical_bias="0.071"
                    app:srcCompat="@drawable/shapes" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/animalLearn"
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.078"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/coloursLearn"
                    app:srcCompat="@drawable/animals" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/birdLearn"
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/animalLearn"
                    app:layout_constraintTop_toBottomOf="@+id/shapeButton"
                    app:layout_constraintVertical_bias="0.119"
                    app:srcCompat="@drawable/birds" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/flowerLearn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/animalLearn"
                    app:layout_constraintTop_toBottomOf="@+id/shapeButton"
                    app:layout_constraintVertical_bias="0.119"
                    app:srcCompat="@drawable/flowers" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/vegetableLearn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/animalLearn"
                    app:layout_constraintTop_toBottomOf="@+id/shapeButton"
                    app:layout_constraintVertical_bias="0.119"
                    app:srcCompat="@drawable/vagetable" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="184dp"
                android:layout_height="184dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/fruitLearn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/animalLearn"
                    app:layout_constraintTop_toBottomOf="@+id/shapeButton"
                    app:layout_constraintVertical_bias="0.119"
                    app:srcCompat="@drawable/fruits" />
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>